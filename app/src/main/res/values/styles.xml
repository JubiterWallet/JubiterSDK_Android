<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomRadioBtn">
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">@color/colorLine</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">7dp</item>
        <item name="android:background">@drawable/rb_nobtn_selector</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>