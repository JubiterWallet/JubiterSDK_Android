<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BTCActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BTC options"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_set_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="Set Unit"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />


    <Spinner
        android:id="@+id/spinner_btc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/spinner"
        android:entries="@array/btc"
        android:padding="12dp"
        android:spinnerMode="dialog"
        android:textAlignment="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btc_trans"
                style="@style/button"
                android:onClick="onClick"
                android:text="TRANSACTION" />

            <Button
                android:id="@+id/btc_get_address"
                style="@style/button"
                android:onClick="onClick"
                android:text="GET_ADDRESS" />

            <Button
                android:id="@+id/btc_show_address"
                style="@style/button"
                android:onClick="onClick"
                android:text="SHOW_ADDRESS" />

            <Button
                android:id="@+id/btc_set_my_address"
                style="@style/button"
                android:onClick="onClick"
                android:text="SET_MY_ADDRESS" />

            <Button
                android:id="@+id/btc_set_timeout"
                style="@style/button"
                android:onClick="onClick"
                android:text="SET_TIMEOUT" />

            <LinearLayout
                android:id="@+id/layout_btc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:background="@color/cardview_dark_background" />

                <Button
                    android:id="@+id/btc_get_balance"
                    style="@style/button"
                    android:onClick="onClick"
                    android:text="Query Balance by Account" />

                <Button
                    android:id="@+id/btc_get_history"
                    style="@style/button"
                    android:onClick="onClick"
                    android:text="Query Transactions by Account" />

                <Button
                    android:id="@+id/btc_broadcast"
                    style="@style/button"
                    android:onClick="onClick"
                    android:text="Transaction and Broadcast" />

                <Button
                    android:id="@+id/btc_query_transaction"
                    style="@style/button"
                    android:onClick="onClick"
                    android:text="Query Transaction by Txid" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1.2"
        android:background="@drawable/bg_log">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/txt_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textIsSelectable="true" />

        </ScrollView>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_delete_forever_blue_400_24dp" />

    </FrameLayout>

</LinearLayout>