<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="17dp">

        <TextView
            android:id="@+id/txt_scan_ble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="Scan BLE"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:visibility="visible" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="Jubiter SDK Demo"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_off_ble"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:text="Off BLE"
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/corners_grey_bg"
        android:orientation="horizontal"
        android:padding="1dp">

        <RadioButton
            android:id="@+id/radio_soft"
            style="@style/CustomRadioBtn"
            android:text="Soft" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_nfc"
            style="@style/CustomRadioBtn"
            android:visibility="gone"
            android:text="NFC" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_ble"
            style="@style/CustomRadioBtn"
            android:text="Ble" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />

        <RadioButton
            android:id="@+id/radio_bio"
            style="@style/CustomRadioBtn"
            android:text="Bio" />

    </RadioGroup>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_finger"
                style="@style/button"
                android:onClick="onClick"
                android:visibility="gone"
                android:text="FingerPrint Management" />

            <Button
                android:id="@+id/btn_device"
                style="@style/button"
                android:onClick="onClick"
                android:text="Device" />


            <Button
                android:id="@+id/btn_btc"
                style="@style/button"
                android:onClick="onClick"
                android:text="BTC" />

            <Button
                android:id="@+id/btn_eth"
                style="@style/button"
                android:onClick="onClick"
                android:text="ETH" />

            <Button
                android:id="@+id/btn_eos"
                style="@style/button"
                android:onClick="onClick"
                android:text="EOS" />

            <Button
                android:id="@+id/btn_xrp"
                style="@style/button"
                android:onClick="onClick"
                android:text="XRP" />

            <Button
                android:id="@+id/btn_trx"
                style="@style/button"
                android:onClick="onClick"
                android:text="TRX" />

            <Button
                android:id="@+id/btn_fil"
                style="@style/button"
                android:onClick="onClick"
                android:text="FIL" />

            <Button
                android:id="@+id/btn_ckb"
                style="@style/button"
                android:onClick="onClick"
                android:text="CKB" />

        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorLine" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1.2"
        android:background="@drawable/bg_log">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/txt_log"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ScrollView>

        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_delete_forever_blue_400_24dp" />

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:textAlignment="textEnd"
        android:textSize="9sp"
        android:textColor="@color/colorPrimary"
        android:text="20201207+0" />


</LinearLayout>